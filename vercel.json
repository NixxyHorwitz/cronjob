{
  "version": 2,
  "name": "telegram-bot-monitor",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/heartbeat",
      "dest": "/api/heartbeat.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/cron-check",
      "dest": "/api/cron-check.js",
      "methods": ["GET", "POST"]
    }
  ],
  "crons": [
    {
      "path": "/api/cron-check",
      "schedule": "* * * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
